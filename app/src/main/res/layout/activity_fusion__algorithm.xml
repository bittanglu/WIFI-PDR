<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/current_x"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="X"
        android:inputType="number|numberDecimal|numberSigned"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/current_y"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Y"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintStart_toEndOf="@+id/current_x"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp" />

    <Text
        android:id="@+id/wifi_x"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:text="wifi_x"
        app:layout_constraintTop_toBottomOf="@+id/current_x"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <Text
        android:id="@+id/wifi_y"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:text="wifi_y"
        app:layout_constraintStart_toEndOf="@+id/wifi_x"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="50dp" />

    <Text
        android:id="@+id/pdr_x"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="pdr_x"
        app:layout_constraintTop_toBottomOf="@+id/wifi_x"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <Text
        android:id="@+id/pdr_y"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:text="pdr_y"
        app:layout_constraintStart_toEndOf="@+id/pdr_x"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="确定"
        app:layout_constraintTop_toBottomOf="@+id/pdr_x"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>

